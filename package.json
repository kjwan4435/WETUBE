{
    "name": "wetube",
    "version": "1.0.0",
    "description": "Clone coding of YOUTUBE with Vanilla and Node JS",
    "main": "index.js",
    "author": "Jiwan",
    "dependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.9.0",
        "@babel/node": "^7.8.7",
        "@babel/polyfill": "^7.8.7",
        "@babel/preset-env": "^7.9.0",
        "add": "^2.0.6",
        "autoprefixer": "^9.7.5",
        "babel-loader": "^8.1.0",
        "body-parser": "^1.19.0",
        "connect-mongo": "^3.2.0",
        "cookie-parser": "^1.4.5",
        "css-loader": "^3.4.2",
        "dotenv": "^8.2.0",
        "eslint": "^6.8.0",
        "express": "^4.17.1",
        "express-session": "^1.17.0",
        "extract-text-webpack-plugin": "^4.0.0-beta.0",
        "helmet": "^3.22.0",
        "mongoose": "^5.9.7",
        "morgan": "^1.10.0",
        "multer": "^1.4.2",
        "node-sass": "^4.13.1",
        "passport": "^0.4.1",
        "passport-local": "^1.0.0",
        "passport-local-mongoose": "^6.0.1",
        "postcss-loader": "^3.0.0",
        "pug": "^2.0.4",
        "sass-loader": "^8.0.2",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11"
    },
    "scripts": {
        "dev:server": "nodemon --exec babel-node src/init.js --delay 2 --ignore 'scss'",
        "dev:assets": "cd src && WEBPACK_ENV=development webpack -w",
        "build:assets": "cd src && WEBPACK_ENV=production webpack",
        "build:server": "babel src --out-dir build --ignore 'src/assets','src/static','src/webpack.confing.js'",
        "build": "npm run build:server && npm run build:assets && cp -R src/static build && cp -R src/views build",
        "prebuild": "rm -rf build",
        "start": "node build/init.js"
    },
    "devDependencies": {
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-import": "^2.20.2",
        "nodemon": "^2.0.2",
        "prettier": "^2.0.2"
    }
}
